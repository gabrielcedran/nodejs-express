    "ts-node": {
        "files": true // enables types redeclaration for ts-node
    },
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "lib": ["ESNext"],
        "esModuleInterop": true,
        "declaration": true
    },
    "include": ["src/**/*.ts"]
}